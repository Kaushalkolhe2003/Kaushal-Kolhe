#include<iostream>
using namespace std;
void update(int **p2){
   //  p=p+1;
    // *p2=*p2+1;
    **p2=**p2+1;
}
int main(){
    int num=23;
    int *ptr=&num;
    int **ptr2=&ptr;
/*    cout<<"Adresss of num is :"<<ptr<<endl;
    cout<<"Value of num through ptr is :"<<*ptr<<endl;
   cout<<"Adress of ptr is "<<&ptr<<endl;
    cout<<"value store at ptr2 is "<<ptr2<<endl;
    cout<<*ptr2<<endl;
    cout<<**ptr2<<endl;
*/
cout<<num<<endl;
cout<<ptr<<endl;
cout<<ptr2<<endl;
cout<<endl<<endl;
update(ptr2);
cout<<num<<endl;
cout<<ptr<<endl;
cout<<ptr2<<endl;
}
